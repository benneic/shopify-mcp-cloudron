# Shopify MCP Server Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Shopify API Configuration (Required)
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your_access_token_here

# Optional: Shopify API Version
SHOPIFY_API_VERSION=2024-01

# Optional: Webhook Configuration
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Optional: CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Optional: Session Configuration
SESSION_SECRET=generate_a_random_secret_here
SESSION_TIMEOUT=3600

# Optional: Database (if using local storage)
DATABASE_PATH=/app/data/database.sqlite

# Optional: Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Optional: Debug Mode
DEBUG=false
DEBUG_SQL=false

# Optional: Metrics and Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# Optional: Security
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
MAX_REQUEST_SIZE=10mb

# Optional: Custom MCP Configuration
MCP_MAX_CONNECTIONS=10
MCP_TIMEOUT=30000
MCP_RETRY_ATTEMPTS=3

# Optional: Feature Flags
ENABLE_PRODUCTS_API=true
ENABLE_ORDERS_API=true
ENABLE_CUSTOMERS_API=true
ENABLE_INVENTORY_API=true
ENABLE_ANALYTICS_API=false