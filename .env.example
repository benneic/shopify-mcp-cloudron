# Server Configuration
PORT=8080

# Authentication (optional)
# Leave AUTH_TYPE empty to disable authentication
# Supported values: "header", "oauth2bearer"
AUTH_TYPE=

# Authentication token (required if AUTH_TYPE is set)
AUTH_TOKEN=

# Header name for authentication (default: Authorization)
AUTH_HEADER_NAME=Authorization

# Shopify MCP Server Configuration
# Disable usage tracking and analytics (true/false)
OPT_OUT_INSTRUMENTATION=false

# Enable Polaris Web Components documentation (true/false)
POLARIS_UNIFIED=true

# Enable Liquid documentation and validation (true/false)
LIQUID=true

# Liquid validation mode: 'full' for entire themes, 'partial' for individual codeblocks
LIQUID_VALIDATION_MODE=partial